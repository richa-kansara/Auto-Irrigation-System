<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BluetoothAct"
    android:background="@drawable/blue3"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="69dp"
        android:onClick="btOn"
        android:text="ON"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt1"
        android:layout_alignLeft="@+id/bt1"
        android:layout_centerVertical="true"
        android:layout_marginEnd="64dp"
        android:onClick="btOff"
        android:text="OFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt1"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt2"
        android:layout_alignStart="@+id/bt2"
        android:layout_alignLeft="@+id/bt2"
        android:layout_marginStart="68dp"
        android:layout_marginTop="61dp"
        android:onClick="back"
        android:text="BACK"
        app:layout_constraintStart_toStartOf="@+id/bt1"
        app:layout_constraintTop_toBottomOf="@+id/bt2" />
</android.support.constraint.ConstraintLayout>